# Make all will do everything

clean:
	docker stop sftp-box || true

build:
	docker build -t sftp-box:1.0 .

run:
	docker run --rm -d -p 10022:22 --name sftp-box sftp-box:1.0

all: clean build run logs


# To get into a container with bash command line
container:
	docker exec -it sftp-box /bin/bash

# sftp with user xoom
connect:
	sftp -P 10022 sftp-admin@localhost

# Look at the logs generated by sftp-box
logs: 
	docker logs -f sftp-box
